<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.huaweicloud</groupId>
        <artifactId>discovery-zookeeper-tests</artifactId>
        <version>1.12.0-2023.0.x-SNAPSHOT</version>
    </parent>

    <artifactId>zookeeper-discovery-tests-client</artifactId>
    <name>Integration Tests::Discovery Zookeeper Tests::Discovery Tests Client</name>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>docker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <configuration>
                            <images>
                                <image>
                                    <name>zookeeper:3.8.3</name>
                                    <alias>zookeeper</alias>
                                    <run>
                                        <namingStrategy>alias</namingStrategy>
                                        <wait>
                                            <log>binding to port</log>
                                            <tcp>
                                                <ports>
                                                    <port>2181</port>
                                                </ports>
                                            </tcp>
                                            <time>60000</time>
                                        </wait>
                                        <ports>
                                            <port>zookeeper.port:2181</port>
                                        </ports>
                                    </run>
                                </image>

                                <image>
                                    <name>zookeeper-price-provider-test:${project.version}</name>
                                    <alias>zookeeper-price-provider-test</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dspring.cloud.zookeeper.discovery.connect-string=zookeeper:2181
                                            </JAVA_OPTS>
                                            <JAR_PATH>/maven/zookeeper-price-provider-test-${project.version}.jar</JAR_PATH>
                                        </env>
                                        <links>
                                            <link>zookeeper:zookeeper</link>
                                        </links>
                                        <wait>
                                            <log>register microservice successfully</log>
                                            <tcp>
                                                <ports>
                                                    <port>9090</port>
                                                </ports>
                                            </tcp>
                                            <time>120000</time>
                                        </wait>
                                        <ports>
                                            <port>9090:9090</port>
                                        </ports>
                                        <dependsOn>
                                            <container>zookeeper</container>
                                        </dependsOn>
                                    </run>
                                </image>

                                <image>
                                    <name>zookeeper-alias-discovery-price-test:${project.version}</name>
                                    <alias>zookeeper-alias-discovery-price-test</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dspring.cloud.zookeeper.discovery.connect-string=zookeeper:2181
                                            </JAVA_OPTS>
                                            <JAR_PATH>/maven/zookeeper-alias-discovery-price-test-${project.version}.jar</JAR_PATH>
                                        </env>
                                        <links>
                                            <link>zookeeper:zookeeper</link>
                                        </links>
                                        <wait>
                                            <log>register microservice successfully</log>
                                            <tcp>
                                                <ports>
                                                    <port>9001</port>
                                                </ports>
                                            </tcp>
                                            <time>120000</time>
                                        </wait>
                                        <ports>
                                            <port>9001:9001</port>
                                        </ports>
                                        <dependsOn>
                                            <container>zookeeper</container>
                                        </dependsOn>
                                    </run>
                                </image>

                                <image>
                                    <name>zookeeper-order-consumer-test:${project.version}</name>
                                    <alias>zookeeper-order-consumer-test</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dspring.cloud.zookeeper.discovery.connect-string=zookeeper:2181
                                            </JAVA_OPTS>
                                            <JAR_PATH>/maven/zookeeper-order-consumer-test-${project.version}.jar</JAR_PATH>
                                        </env>
                                        <links>
                                            <link>zookeeper:zookeeper</link>
                                        </links>
                                        <wait>
                                            <log>register microservice successfully</log>
                                            <tcp>
                                                <ports>
                                                    <port>9098</port>
                                                </ports>
                                            </tcp>
                                            <time>120000</time>
                                        </wait>
                                        <ports>
                                            <port>9098:9098</port>
                                        </ports>
                                        <dependsOn>
                                            <container>zookeeper</container>
                                        </dependsOn>
                                    </run>
                                </image>

                                <image>
                                    <name>zookeeper-discovery-gateway-test:${project.version}</name>
                                    <alias>zookeeper-discovery-gateway-test</alias>
                                    <run>
                                        <env>
                                            <JAVA_OPTS>
                                                -Dspring.cloud.zookeeper.discovery.connect-string=zookeeper:2181
                                            </JAVA_OPTS>
                                            <JAR_PATH>/maven/zookeeper-discovery-gateway-test-${project.version}.jar</JAR_PATH>
                                        </env>
                                        <links>
                                            <link>zookeeper:zookeeper</link>
                                        </links>
                                        <wait>
                                            <log>register microservice successfully</log>
                                            <tcp>
                                                <ports>
                                                    <port>10088</port>
                                                </ports>
                                            </tcp>
                                            <time>120000</time>
                                        </wait>
                                        <ports>
                                            <port>10088:10088</port>
                                        </ports>
                                        <!-- gateway using discovery locator and will poll services when heart beat successfully.
                                             make sure order-consumer-test registered before gateway and test case success.
                                         -->
                                        <dependsOn>
                                            <container>zookeeper-order-consumer-test</container>
                                            <container>zookeeper-price-provider-test</container>
                                            <container>zookeeper-alias-discovery-price-test</container>
                                        </dependsOn>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.github.odavid.maven.plugins</groupId>
                        <artifactId>mixin-maven-plugin</artifactId>
                        <configuration>
                            <mixins>
                                <mixin>
                                    <groupId>com.huaweicloud</groupId>
                                    <artifactId>docker-run-config</artifactId>
                                    <version>${project.version}</version>
                                </mixin>
                            </mixins>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>